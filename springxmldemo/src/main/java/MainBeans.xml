<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean id="helloWorld" class="com.importnew.HelloWorld">
           <property name="message" value="Hello World! By Spring"/>
           <property name="printer" ref="StartPrinter"/>
       </bean>
       
       <!-- using import to other bean configuration file -->
       <import resource="OtherBeans.xml"/>
       
       
<!-- create using spring bean configuration file  -->

</beans>
